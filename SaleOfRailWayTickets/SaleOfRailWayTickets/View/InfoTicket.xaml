<Window x:Class="lab4_5.ChangeTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" Cursor="{StaticResource customCursor}"
        Title="Информация о билете" Height="450" Width="800" Background="#FFF4CF">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="200*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="34*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0">
            <xctk:WatermarkTextBox x:Name="ChangeNameWay" Text="{Binding Path=SelectedTicket.NameWay}" Margin="5" FontSize="28" Style="{DynamicResource CustomTextBox}"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <xctk:WatermarkTextBox x:Name="ChangeNumberTrain" Text="{Binding Path=SelectedTicket.NumberTrain}" Margin="5" FontSize="20" Style="{DynamicResource CustomTextBox}"/>
            <xctk:WatermarkTextBox x:Name="ChangePrice" Text="{Binding Path=SelectedTicket.Price}" Margin="5" FontSize="20" Style="{DynamicResource CustomTextBox}"/>
            <xctk:WatermarkTextBox x:Name="TicketTimePicker" Text="{Binding Path=SelectedTicket.Time}" Margin="5" FontSize="20" Style="{DynamicResource CustomTextBox}"/>
            <StackPanel>
                <RadioButton x:Name="Train" Content="Поезд" IsChecked="True" Margin="5"/>
                <RadioButton x:Name="Electric" Content="Электричка" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <xctk:WatermarkTextBox x:Name="ChangeDescription" Text="{Binding Path=SelectedTicket.Description}" FontSize="20" TextWrapping="Wrap" Width="783" Style="{DynamicResource CustomTextBox}"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="3">
            <Button x:Name="ButtonChange" Width="50" Content="&#128190;" Margin="5" Command="{Binding ChangeCommand}" Click="SaveChange_Click"/>
            <Button x:Name="ButtonDelete" Width="50" Content="&#128465;" Margin="5" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedTicket}"/>
        </StackPanel>
    </Grid>
</Window>
