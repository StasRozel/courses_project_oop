<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ColorRectangle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#98E4FF" />
    </Style>

    <Style x:Key="ColorTable" TargetType="Rectangle">
        <Setter Property="Fill" Value="#98E4FF" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <Style x:Key="CustomTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="#98E4FF"/>
        <Setter Property="BorderBrush" Value="#80B3FF"/>
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>
</ResourceDictionary>